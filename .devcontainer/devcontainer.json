{
    "name": "ROS 2 dev Container",
    "privileged": true,
    // "image": "rmf_all_imagev1.1",
    "remoteUser": "root",
    "build": {
        "dockerfile": "Dockerfile"
        ,
        // "options": [
        //     "--ssh default"
        // ],
        "ssh": "default"
    },
    "workspaceFolder": "/root/ff_ws/",
    "workspaceMount": "source=${localWorkspaceFolder},target=/root/ff_ws/,type=bind",
    "customizations": {
        "vscode": {
            "extensions":[
                "ms-vscode.cpptools",
                "ms-vscode.cpptools-themes",
                "ms-vscode.cpptools-extension-pack",
                "twxs.cmake",
                "ms-python.python",
                // "donjayamanne.python-extension-pack",
                "ranch-hand-robotics.rde-ros-2"
            ]
        }
    },
    "containerEnv": {
        "DISPLAY": "unix:0",
        "ROS_AUTOMATIC_DISCOVERY_RANGE": "LOCALHOST", //from jazzy doc is defined
        "ROS_DOMAIN_ID": "42"
    },
    "runArgs": [
        "--net=host",
        "--pid=host",
        "--ipc=host",
        "-e", "DISPLAY=${env:DISPLAY}",
        "--name=serverNavRos",
        "--runtime=nvidia","--gpus","all","-e","NVIDIA_DRIVER_CAPABILITIES=all",
        "--device=/dev/dri:/dev/dri"
    ],
    "mounts": [
       "source=/tmp/.X11-unix,target=/tmp/.X11-unix,type=bind,consistency=cached",
       "source=${SSH_AUTH_SOCK},target=/ssh-agent,type=bind"
    ],
    "postCreateCommand": "bash",
    "features": {},
    "remoteEnv": {
        "SSH_AUTH_SOCK": "/ssh-agent"
    }

}